<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IDAAI APP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/lib/datatables/datatables.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="~/lib/jquery-toast-plugin-master/dist/jquery.toast.min.css" asp-append-version="true" />
</head>
<body class="">
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Menu" asp-action="Index">Laboratorio Abierto</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" id="navBarAsistencia" asp-area="" asp-controller="LaboratorioAbierto" asp-action="Asistencia">Asistencia</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="navBarPrestamo" asp-area="" asp-controller="LaboratorioAbierto" asp-action="Prestamo">Préstamo de Items</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="navBarEstudiante" asp-area="" asp-controller="LaboratorioAbierto" asp-action="Estudiante">Estudiantes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="navBarInventario" asp-area="" asp-controller="LaboratorioAbierto" asp-action="Inventario">Inventario</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="navBarItem" asp-area="" asp-controller="LaboratorioAbierto" asp-action="Item">Items</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="navBarCarrera" asp-area="" asp-controller="LaboratorioAbierto" asp-action="Carrera">Carreras</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Cuenta
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" asp-controller="Menu" asp-action="Perfil">Editar perfil</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-controller="Operaciones" asp-action="Logout">Cerrar sesión</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 my-3">
            @RenderBody()
        </main>
        <div id="cargando" class="d-flex justify-content-center invisible" tabindex="-1">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - IDAAI APP
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-toast-plugin-master/dist/jquery.toast.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/datatables/datatables.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
